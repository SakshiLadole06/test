<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".day_two.fragments.ProfilePage3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:text="Profile Setup"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/manrope_bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:layout_gravity="center_horizontal"
        android:text="Choose minimum 3 interests."
        android:textSize="16sp"
        android:fontFamily="@font/manrope_regular"
        android:textColor="@color/profilePageTextColor" />

    <GridView
        android:id="@+id/gridView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_gravity="center_horizontal"
        android:numColumns="3"
        android:verticalSpacing="8dp"
        android:horizontalSpacing="8dp"
        android:stretchMode="columnWidth" />

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginTop="500dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="12dp">

        <EditText
            android:id="@+id/dob"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/level"
            android:drawableEnd="@drawable/down_arrow"
            android:padding="10dp"
            android:hint="Fitness Level\nIntermediate"
            android:backgroundTint="@android:color/transparent"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="670dp">
    <Button
        android:id="@+id/B1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:backgroundTint="@color/layoutColor"
        android:textColor="@color/black"
        android:text="Previous"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/B2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:backgroundTint="@color/btnColor"
        android:text="Next"
        android:fontFamily="@font/manrope_regular"
        android:textSize="18sp" />
    </LinearLayout>

</FrameLayout>
